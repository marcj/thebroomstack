{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"outDir": "build/Release/",
		"sourceMap": true,
		"target": "es6",
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"pretty": true,
		"strictNullChecks": true
	},
	"files": [
		"src/app.ts",
		"src/controller/PersonController.ts",
		"src/controller/HomeController.ts"
	]
}

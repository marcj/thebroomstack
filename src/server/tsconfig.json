{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"outDir": "../../build/release/server",
		"sourceMap": true,
		"target": "es6",
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"pretty": true,
		"strictNullChecks": true,
		"typeRoots": [
			"../types/server",
			"../types/shared",
			"../../node_modules/@types"
		]
	},
	"include": [
		"app.ts",
		"controller/**/*Controller.ts"
	]
}
